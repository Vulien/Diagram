<?xml version="1.0" encoding="UTF-8"?>
<mxfile host="app.diagrams.net">
  <diagram id="usecase_diagram" name="Use Case Diagram">
    <mxGraphModel>
      <root>
        <mxCell id="0" />
        <mxCell id="1" parent="0" />
        
        <!-- Actor Người dùng -->
        <mxCell id="actor_user" value="Người dùng" style="shape=mxgraph.ios7.user;" vertex="1" parent="1">
          <mxGeometry x="20" y="100" width="40" height="80" as="geometry" />
        </mxCell>

        <!-- Actor Hệ thống -->
        <mxCell id="actor_system" value="Hệ thống" style="shape=mxgraph.android.computer;" vertex="1" parent="1">
          <mxGeometry x="500" y="100" width="40" height="80" as="geometry" />
        </mxCell>

        <!-- Use Case Thu thập phản hồi -->
        <mxCell id="usecase_collect_feedback" value="Thu thập phản hồi" style="ellipse;whiteSpace=wrap;fillColor=#99CCFF;" vertex="1" parent="1">
          <mxGeometry x="200" y="50" width="160" height="60" as="geometry" />
        </mxCell>

        <!-- Use Case Nhập URL sản phẩm -->
        <mxCell id="usecase_input_url" value="Nhập URL sản phẩm" style="ellipse;whiteSpace=wrap;fillColor=#99CCFF;" vertex="1" parent="1">
          <mxGeometry x="50" y="20" width="140" height="40" as="geometry" />
        </mxCell>

        <!-- Include Ghi log quá trình thu thập -->
        <mxCell id="usecase_log" value="Ghi log quá trình thu thập" style="ellipse;whiteSpace=wrap;fillColor=#99CCFF;" vertex="1" parent="1">
          <mxGeometry x="400" y="50" width="160" height="60" as="geometry" />
        </mxCell>
        
        <mxCell id="include_log" edge="1" parent="1" style="edgeStyle=orthogonalEdgeStyle;dashed=1;">
          <mxGeometry relative="1" as="geometry" />
          <mxPoint as="sourcePoint" />
          <mxPoint as="targetPoint" />
          <mxCell source="usecase_collect_feedback" target="usecase_log" />
        </mxCell>

        <!-- Use Case Lưu phản hồi -->
        <mxCell id="usecase_save_feedback" value="Lưu phản hồi" style="ellipse;whiteSpace=wrap;fillColor=#99CCFF;" vertex="1" parent="1">
          <mxGeometry x="200" y="250" width="160" height="60" as="geometry" />
        </mxCell>

        <!-- Extend Thông báo kết quả -->
        <mxCell id="usecase_notify" value="Thông báo kết quả" style="ellipse;whiteSpace=wrap;fillColor=#99CCFF;" vertex="1" parent="1">
          <mxGeometry x="400" y="250" width="160" height="60" as="geometry" />
        </mxCell>

        <mxCell id="extend_notify" edge="1" parent="1" style="edgeStyle=orthogonalEdgeStyle;dashed=1;">
          <mxGeometry relative="1" as="geometry" />
          <mxPoint as="sourcePoint" />
          <mxPoint as="targetPoint" />
          <mxCell source="usecase_save_feedback" target="usecase_notify" />
        </mxCell>

        <!-- Relationships -->
        <mxCell edge="1" parent="1">
          <mxGeometry relative="1" as="geometry" />
          <mxCell source="actor_user" target="usecase_collect_feedback" />
        </mxCell>

        <mxCell edge="1" parent="1">
          <mxGeometry relative="1" as="geometry" />
          <mxCell source="usecase_collect_feedback" target="usecase_save_feedback" />
        </mxCell>

        <mxCell edge="1" parent="1">
          <mxGeometry relative="1" as="geometry" />
          <mxCell source="actor_system" target="usecase_save_feedback" />
        </mxCell>

      </root>
    </mxGraphModel>
  </diagram>
</mxfile>
